@using MvcEssentialsHw.Models
@model CalculatorFormViewModel

@if (Model.Kilo == "1000")
{
    <div id="kilo">Bandwidth (Kilo = 1000 bits)</div>
}
else
{
    <div id="kilo">Storage (Kilo = 1024 bits)</div>
}

@foreach (var item in Model.Units)
{
    <div><span class="type-name">@Html.DisplayFor(i => ((StorageUnit)item).Name)</span><span class="type-value">@Html.DisplayFor(i => ((StorageUnit)item).RelativeValue)</span></div>
}
